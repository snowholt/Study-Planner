[Unit]
Description=ADK Study Planner - Auth Backend
After=network.target

[Service]
Type=simple
User=lumi
WorkingDirectory=/home/lumi/adk-study-planner/adk-study-planner/webapp/backend
Environment="PATH=/home/lumi/adk-study-planner/adk-study-planner/webapp/backend/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/lumi/adk-study-planner/adk-study-planner/webapp/backend/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8080
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
